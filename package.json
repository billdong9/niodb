{
  "name": "niodb",
  "version": "0.1.0",
  "description": "Minimalist & fast atomic local JSON database.",
  "type": "module",
  "main": "./dist/main.cjs",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    },
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "scripts": {
    "build": "npx unbuild",
    "lint": "standard",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billdong9/niodb.git"
  },
  "keywords": [
    "database",
    "json",
    "local",
    "db",
    "simple",
    "new",
    "app",
    "electron"
  ],
  "files": [
    "dist"
  ],
  "author": "Bill Dong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/billdong9/niodb/issues"
  },
  "homepage": "https://github.com/billdong9/niodb#readme",
  "devDependencies": {
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "unbuild": "^2.0.0"
  }
}